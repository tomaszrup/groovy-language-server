{
  "name": "groovy-spock-support",
  "displayName": "Groovy & Spock Language Support",
  "description": "Language support for Groovy and Spock",
  "version": "0.0.5",
  "publisher": "TomaszRup",
  "homepage": "https://github.com/tomaszrup/groovy-language-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomaszrup/groovy-language-server.git"
  },
  "bugs": {
    "url": "https://github.com/tomaszrup/groovy-language-server/issues"
  },
  "license": "Apache-2.0",
  "icon": "./images/groovy.png",
  "private": true,
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Groovy",
    "Grails",
    "Spock",
    "Spock Framework",
    "Testing"
  ],
  "main": "./build/extension.js",
  "engines": {
    "vscode": "^1.99.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.50",
    "@types/vscode": "^1.99.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "@vscode/vsce": "^3.4.2",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageclient": "^9.0.1",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "activationEvents": [
    "onLanguage:groovy"
  ],
  "contributes": {
    "languages": [
      {
        "id": "groovy",
        "extensions": [
          ".groovy"
        ],
        "aliases": [
          "Groovy"
        ]
      }
    ],
    "commands": [
      {
        "command": "groovy.restartServer",
        "title": "Restart Groovy language server",
        "category": "Groovy"
      }
    ],
    "configuration": {
      "type": "object",
      "description": "Groovy configuration",
      "properties": {
        "groovy.java.home": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies the folder path to the JDK. Use this setting if the extension cannot find Java automatically."
        },
        "groovy.classpath": {
          "type": "array",
          "default": null,
          "description": "Specifies additional entries to add to the classpath. May contain both folders and individual .jar files.",
          "items": {
            "type": "string"
          }
        },
        "groovy.debug.serverPort": {
          "type": "number",
          "default": 0,
          "description": "If set, connect to an existing Groovy LSP server on this TCP port instead of starting one automatically."
        },
        "groovy.semanticHighlighting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable semantic syntax highlighting for Groovy files."
        },
        "groovy.formatting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable document formatting for Groovy files."
        }
      }
    }
  }
}
